{
  "manifest_version": 3,
  "name": "Wallet Extension",
  "version": "1.0",
  "action": {
    "default_popup": "public/index.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": [
    "webRequest",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
